# ===========================================================
# Peaxel Discord Bot - Environment Variables
# ===========================================================

# ============ REQUIRED ============

# Discord Bot Token
DISCORD_TOKEN=

# Discord Application/Client ID
DISCORD_CLIENT_ID=

# Channel ID where weekly announcements (Monday/Thursday) will be posted
ANNOUNCE_CHANNEL_ID=

# ============ OPTIONAL / CHANNELS ============

# Guild ID for instant command updates (Testing Server)
DISCORD_GUILD_ID=

# Channel for Feedback submissions
FEEDBACK_CHANNEL_ID=

# Channel for Administrative Logs (Startup, Errors, Usage)
LOG_CHANNEL_ID=

# NEW: Channel for Athlete Spotlight (Wednesday 16:00)
# Si non défini, il utilisera l'ID en dur dans scheduler.js
SPOTLIGHT_CHANNEL_ID=

# ============ SETTINGS ============

# Timezone for scheduling (default: Europe/Paris)
TZ=

FEEDBACK_STATS_CHANNEL_ID=